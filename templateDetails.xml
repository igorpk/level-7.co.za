<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension
	version="1.6"
	type="template"
	client="site">
	<name>Theme705</name>
	<creationDate></creationDate>
	<author></author>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<copyright></copyright>
	<license></license>
	<version>1.6.0</version>
	<description>TPL_THEME705_XML_DESCRIPTION</description>
	<files>
		<folder>html</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>language</folder>
		<folder>scripts</folder>
		<filename>index.php</filename>
		<filename>index.html</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
	</files>

	<positions>
		<position>user-menu</position>
		<position>top-menu</position>
		<position>top</position>
		<position>left</position>
		<position>right</position>
		<position>bottom</position>
		<position>footer</position>
		<position>breadcrumbs</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_theme705.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_theme705.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="logo" type="media"
					hide_default="1"
					label="TPL_LOGO_LABEL" description="TPL_LOGO_DESC" 
				/>

				<field name="sitetitle"  type="text" default=""
					label="TPL_SITETITLE_LABEL"
					description="TPL_SITETITLE_DESC"
					filter="string" 
				/>

				<field name="sitedescription"  type="text" default=""
					label="TPL_DESCRIPTION_LABEL"
					description="TPL_DESCRIPTION_DESC"
					filter="string" 
				/>

			</fieldset>
			
			<fieldset name="LAYOUT">
						
			<field name="leftcol" type="list" default="220" label="TPL_LEFT_COL_LABEL" description="TPL_LEFT_COL_DESC" >
					<option value="60">60</option>
					<option value="140">140</option>
					<option value="220">220</option>
					<option value="300">300</option>
			</field>
			
			<field name="rightcol" type="list" label="TPL_RIGHT_COL_LABEL" description="TPL_RIGHT_COL_DESC" default="220">
					<option value="60">60</option>
					<option value="140">140</option>
					<option value="220">220</option>
					<option value="300">300</option>
			</field>
			</fieldset>
		</fields>
		
	</config>


</extension>
